// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Contact {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String?
  message   String
  createdAt DateTime @default(now())

  @@map("contacts")
}

model Booking {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String
  service   String
  date      String?
  time      String?
  message   String?
  createdAt DateTime @default(now())

  @@map("bookings")
}

model Service {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String
  category    String // "Aesthetic" or "Dental"
  isActive    Boolean  @default(true)
  image       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("services")
}
